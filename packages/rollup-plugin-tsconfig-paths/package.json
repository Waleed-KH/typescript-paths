{
  "name": "rollup-plugin-tsconfig-paths",
  "version": "1.3.0",
  "description": "Rollup plugin for resolving tsconfig paths",
  "license": "MIT",
  "types": "types/index.d.ts",
  "main": "./lib/index.cjs",
  "module": "./lib/esm/index.mjs",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/esm/index.mjs"
    }
  },
  "author": "lightyen",
  "repository": {
    "url": "https://github.com/lightyen/typescript-paths"
  },
  "homepage": "https://github.com/lightyen/typescript-paths/blob/main/packages/rollup-plugin-tsconfig-paths#readme",
  "scripts": {
    "types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outDir types",
    "compile": "rollup -c",
    "format": "prettier --config ../../.prettierrc.yml --write index.ts types/**/*",
    "build": "npm run compile && npm run types && npm run format",
    "prepare": "npm run build"
  },
  "keywords": [
    "rollup",
    "plugin",
    "tsconfig",
    "paths"
  ],
  "dependencies": {
    "typescript-paths": "^1.4.0"
  },
  "peerDependencies": {
    "rollup": "^2"
  },
  "files": [
    "lib",
    "types",
    "LICENSE",
    "README.md"
  ]
}
