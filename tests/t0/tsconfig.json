{
  "extends": "../tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": false,
    "paths": {
      "~/*": ["./*"],
      "@xxx/*/xxx": ["./xyz/*/xyz"],
      "@xxx/*": ["./abc/*"],
      "#m/*": ["./abc/*", "./xyz/*/xyz"],
      "roll": ["../../node_modules/rollup"],
      "@p": ["./xx/qq.ts", "./xx/ff.ts"],
      "@q": ["./xx/ee.ts"],
      "#v": ["./xx/vv.abs"],
      "@v": ["./xx/vv.abs.ts"]
    }
  },
  "include": ["**/*"]
}
